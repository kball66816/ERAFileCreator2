<UserControl x:Class="EraView.Views.RenderingProviderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EraView.Views"
             xmlns:viewModel="clr-namespace:PatientManagement.ViewModel;assembly=PatientManagement.ViewModel"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModel:RenderingProviderViewModel/>
    </UserControl.DataContext>

    <Grid Margin="5,5,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Patient's Rendering Provider" FontSize="16" TextDecorations="Underline" Margin="5,0,0,5"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="RenderingProviderFirstNameTag"
                    Text="Provider's First Name*" Margin="5,0,0,0"/>
                <TextBox x:Name="RenderingProviderFirstNameInput"
                    Text="{Binding RenderingProvider.FirstName}"
                    IsEnabled="{Binding IsChecked, Converter={StaticResource NotConverter}, 
                    ElementName=IsAlsoRendering}" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <TextBlock x:Name="RenderingProviderLastNameTag"
                    Text="Provider's Last Name*" Margin="5,0,0,0"/>
                <TextBox x:Name="RenderingProviderLastNameInput"
                    Text="{Binding RenderingProvider.LastName}"
                    IsEnabled="{Binding IsChecked, Converter={StaticResource NotConverter}, ElementName=IsAlsoRendering}" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <TextBlock x:Name="RenderingProviderNpiTag"
                    Text="Provider's NPI*" Margin="5,0,0,0"/>
                <TextBox x:Name="RenderingProviderNpiInput"
                    Text="{Binding RenderingProvider.Npi}"
                    MaxLength="10" 
                    IsEnabled="{Binding IsChecked, Converter={StaticResource NotConverter}, ElementName=IsAlsoRendering}" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
