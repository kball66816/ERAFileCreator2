<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:EraView.Views"
        x:Class="EraView.MainWindow"
        mc:Ignorable="d"
        Title="ERA File Creator"
        SizeToContent="WidthAndHeight">
    
    <Grid x:Name="TopGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <views:InsuranceCompanyView Grid.Row="0"/>
        <views:BillingProviderView Grid.Row="1"/>
        <views:SinglePageView x:Name="TestView" Grid.Row="2"/>

    </Grid>
</Window>
